<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_task_name"
        android:text="Task name"
        android:textSize="20sp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_name"
        android:id="@+id/cb_is_done"
        />
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icons8_edit_48"
        android:layout_below="@+id/tv_task_name"
        android:layout_toRightOf="@+id/cb_is_done"
        android:id="@+id/img_icon_edit"/>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icons8_trash_48"
        android:layout_below="@+id/tv_task_name"
        android:layout_toRightOf="@+id/img_icon_edit"
        android:id="@+id/img_icon_delete"/>
    <TextView
    android:layout_marginLeft="5dp"
    android:layout_width="70dp"
    android:layout_height="32dp"
    android:layout_below="@+id/tv_task_name"
    android:layout_toRightOf="@+id/img_icon_delete"
    android:textSize="15sp"
    android:text="11:55 AM"
    android:gravity="center"
    android:id="@+id/tv_time"
    />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_task_name"
        android:layout_toEndOf="@+id/tv_time"
        android:gravity="center"
        android:text="20/04/2018"
        android:textSize="15sp" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="58dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_task_name"
        android:layout_toRightOf="@+id/tv_date"
        android:text="@string/repeat"
        android:gravity="center"
        android:id="@+id/tv_repeat"
        />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/icons8_delete_48"
        android:layout_below="@+id/tv_task_name"
        android:layout_toRightOf="@+id/tv_repeat"
        android:id="@+id/img_icon_repeat"/>
</RelativeLayout>