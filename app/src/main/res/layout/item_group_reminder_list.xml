<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="1dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icons8_tasklist_48"
        android:id="@+id/img_icon_group_task"/>
    <TextView
        android:padding="5dp"
        android:layout_toRightOf="@+id/img_icon_group_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Group task name"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:id="@+id/tv_group_task_name"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_group_task_size"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"/>
</RelativeLayout>